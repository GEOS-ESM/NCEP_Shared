.SUFFIXES:
.SUFFIXES: .fpp .F95 .f95 .F90 .f90 .o
.fpp.o:
	$(FC) $(FCFLAGS) $(EXTRA_FCFLAGS) $(FPPFLAGS) $<

.F95.o:
	$(FC) $(FCFLAGS) $(EXTRA_FCFLAGS) $(FPPFLAGS) $<

.f95.o:
	$(FC) $(FCFLAGS) $(EXTRA_FCFLAGS) $<

.F90.o:
	$(FC) $(FCFLAGS) $(EXTRA_FCFLAGS) $(FPPFLAGS) $<

.f90.o:
	$(FC) $(FCFLAGS) $(EXTRA_FCFLAGS) $<

