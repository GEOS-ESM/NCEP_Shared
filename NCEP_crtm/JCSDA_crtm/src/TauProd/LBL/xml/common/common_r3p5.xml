    <entry name="zm"                            type="REAL(fp)"     value="0.0_fp"  desc="Boundary altitude"/>
    <entry name="pm"                            type="REAL(fp)"     value="0.0_fp"  desc="Boundary pressure"/>
    <entry name="tm"                            type="REAL(fp)"     value="0.0_fp"  desc="Boundary temperature"/>
    <entry name="jcharp"                        type="CHARACTER(1)" value="'+'"     desc="Number of input atmopsheric profile boundaries"/>
    <entry name="jchart"                        type="CHARACTER(1)" value="'+'"     desc="Number of input atmopsheric profile boundaries"/>
    <entry name="jlong"                         type="CHARACTER(1)" value="'+'"     desc="Number of input atmopsheric profile boundaries"/>
    <entry name="jchar" dim="(MAX_N_ABSORBERS)" type="CHARACTER(1)" value="'+'"     desc="Flag for units for molecular input"/>
  </record>
</lblinput>
