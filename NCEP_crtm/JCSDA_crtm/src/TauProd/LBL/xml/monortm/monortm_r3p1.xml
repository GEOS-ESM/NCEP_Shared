<lblinput>
  <!-- MonoRTM 3.1 record. Note: Looks the same as LBLRTM 3.1, but the values can be different -->
  <record name="r3p1" type="monortm" format="(7i5,i2,1x,i2,3f10.3,10x,f10.3)">
    <entry name="model"   type="INTEGER"  value="0"      desc="Selects atmospheric profile"/>
    <entry name="itype"   type="INTEGER"  value="0"      desc="Selects type of path"/>
    <entry name="ibmax"   type="INTEGER"  value="0"      desc="Selects layering"/>
    <entry name="nozero"  type="INTEGER"  value="1"      desc="Controls zeroing of small absorber amounts."/>
    <entry name="noprnt"  type="INTEGER"  value="0"      desc="Controls printout length"/>
    <entry name="nmol"    type="INTEGER"  value="0"      desc="Number of molecular species"/>
    <entry name="ipunch"  type="INTEGER"  value="1"      desc="Controls output of layer data to TAPE7"/>
    <entry name="ifxtyp"  type="INTEGER"  value="0"      desc="Controls cross-layer DV field output"/>
    <entry name="munits"  type="INTEGER"  value="0"      desc="Controls molecular amounts units output"/>
    <entry name="re"      type="REAL(fp)" value="0.0_fp" desc="Radius of earth (km). 0.0 == model defaults"/>
    <entry name="hspace"  type="REAL(fp)" value="0.0_fp" desc="Altitude defintion for space. 100km == default"/>
    <entry name="vbar"    type="REAL(fp)" value="0.0_fp" desc="Frequency for refractive geometry. Average == default"/>
    <entry name="ref_lat" type="REAL(fp)" value="0.0_fp" desc="LAtitude of location of calculation. 0.0 == model defaults"/>
  </record>
</lblinput>
