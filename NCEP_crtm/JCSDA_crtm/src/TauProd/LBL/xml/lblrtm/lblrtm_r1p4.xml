  <record name="r1p4" type="lblrtm" format="(7(es10.3),4x,1a)">
    <entry name="tbound"              type="REAL(fp)"      value="0.0_fp"                    desc="Temperature of end-of-path boundary (K)"/>
    <entry name="sremis"    dim="(3)" type="REAL(fp)"      value="(/1.0_fp,0.0_fp,0.0_fp/)"  desc="Frequency dependent boundary emissivity coefficients"/>
    <entry name="srrefl"    dim="(3)" type="REAL(fp)"      value="(/0.0_fp,0.0_fp,0.0_fp/)"  desc="Frequency dependent boundary reflectivity coefficients"/>
    <entry name="surf_refl"           type="CHARACTER(1)"  value="''"                        desc="Specifies the surface type (s,l) used in computing the reflected downward radiance"/>
  </record>
</lblinput>
