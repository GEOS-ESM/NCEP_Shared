<lblinput>
  <!-- LBLRTM 1.2x records -->
  <record name="r1p2" type="lblrtm" format="(10(4x,i1),3x,i2,3(4x,i1),2(1x,i4))">
    <entry name="ihirac" type="INTEGER" value="1" desc="Voigt profile"/>
    <entry name="ilblf4" type="INTEGER" value="1" desc="Line-by-line bounds is 25cm-1 for all layer pressures"/>
    <entry name="icntnm" type="INTEGER" value="1" desc="All continua calculated, including Rayleigh extinction"/>
    <entry name="iaersl" type="INTEGER" value="0" desc="No aerosols used"/>
    <entry name="iemit"  type="INTEGER" value="1" desc="Radiance and transmittance calculated"/>
    <entry name="iscan"  type="INTEGER" value="0" desc="No scanning function"/>
    <entry name="ifiltr" type="INTEGER" value="0" desc="No filter function"/>
    <entry name="iplot"  type="INTEGER" value="0" desc="No plotting output"/>
    <entry name="itest"  type="INTEGER" value="0" desc="No test"/>
    <entry name="iatm"   type="INTEGER" value="1" desc="Call LBLATM"/>
    <entry name="imrg"   type="INTEGER" value="0" desc="Normal merge"/>
    <entry name="ilas"   type="INTEGER" value="0" desc="Laser option (not currently available)"/>
    <entry name="iod"    type="INTEGER" value="0" desc="Normal calculation for layering control in OD calcs."/>
    <entry name="ixsect" type="INTEGER" value="0" desc="No cross-sections included in calculation"/>
    <entry name="mpts"   type="INTEGER" value="0" desc="Number of OD panel values output as a result of convolution"/>
    <entry name="npts"   type="INTEGER" value="0" desc="Number of OD panel values output as a result of merge"/>
  </record>
  <record name="r1p2p1" type="lblrtm" format="(i5,i5,2x,i3)">
    <entry name="inflag" type="INTEGER" value="0" desc="Voigt profile"/>
    <entry name="iotflg" type="INTEGER" value="0" desc="Voigt profile"/>
    <entry name="juldat" type="INTEGER" value="0" desc="Voigt profile"/>
  </record>
</lblinput>
